<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="main_text_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#2E002E</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="clickable_text_layout" parent="date_layout">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="date_layout" parent="main_text_layout">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1F001F</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">left</item>
    </style>
    
    
    

</resources>